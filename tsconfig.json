{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "ES2020",
    "strictNullChecks": true,
    "importHelpers": true,
    "rootDirs": ["./src/", "./test/", "./demo/"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}
